{
    "rewrites": [
        {
            "source": "/ws",
            "destination": "https://med-translate-production.up.railway.app/ws"
        },
        {
            "source": "/api/:path*",
            "destination": "https://med-translate-production.up.railway.app/api/:path*"
        },
        {
            "source": "/health",
            "destination": "https://med-translate-production.up.railway.app/health"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                }
            ]
        }
    ]
}